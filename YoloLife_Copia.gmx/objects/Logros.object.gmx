            <string>/// Set the achievements text.
banner_height = 90;

// Achievement text.
if(idioma == "en"){
    txt = Traduce(
        "Visit our facebook fanpage!", 
        "Invite 5 friends to play with#you!", 
        "Complete 5 objectives!", 
        "Get the gold trophy in 15#different levels!", 
        "You have played Yolo Life 50#times!",
        "Complete 30 levels of the#world!", 
        "Pick up 500 gold bars!", 
        "You have used 25 times the#slowdown power!", 
        "You have used 15 times the#freeze power!", 
        "You have used 15 times the#checkpoint power!", 
        "Get kill with the enemies 500#times!", 
    );
}else if(idioma == "es"){
    txt = Traduce(
        "Visita nuestra pagina de#Facebook!", 
        "Invita a 5 amigos para que#juegen contigo!", 
        "Completa 5 objetivos!", 
        "Consigue el trofeo de oro en#15 niveles diferentes!", 
        "Has jugado Yolo Life 50#veces!",
        "Completa 30 niveles del#mundo!", 
        "Recoge 1000 barras de oro!", 
        "Has usado 25 veces el poder#relantizador!", 
        "Has usado 15 veces el poder#de congelacion", 
        "Has usado 15 veces el# checkpoint!", 
        "Matate 500 veces con la lava!"
    );
}

// Copy the grid and organize it.
grid = ds_grid_create(ds_grid_width(logros), ds_grid_height(logros));
ds_grid_copy(grid, logros);

// Repeat the procces ds_grid_width(grid) times.
repeat(ds_grid_width(grid)){
    for(var i = 0; i &lt; ds_grid_width(grid); i++){    
        
        var amount = ds_grid_get(grid, i, 0);
        var total = ds_grid_get(grid, i, 1);
        var took_reward = ds_grid_get(grid, i, 3);
        
        // If the player completed the achievement and already claimed his reward.
        if((amount &gt;= total and i &lt; ds_grid_width(grid) - 1) and took_reward){
             // Change the text.
             var copia = txt[i+1];
             txt[i+1] = txt[i];
             txt[i] = copia;
             
             // Change the value of the grid in that position.
             var next_amount = ds_grid_get(grid, i + 1, 0);
             var next_total = ds_grid_get(grid, i + 1, 1);
             var next_reward = ds_grid_get(grid, i + 1, 2);
             var next_took = ds_grid_get(grid, i + 1, 3);
             
             ds_grid_set(grid, i + 1, 0, ds_grid_get(grid, i, 0));
             ds_grid_set(grid, i + 1, 1, ds_grid_get(grid, i, 1));
             ds_grid_set(grid, i + 1, 2, ds_grid_get(grid, i, 2));
             ds_grid_set(grid, i + 1, 3, ds_grid_get(grid, i, 3));
             
             ds_grid_set(grid, i, 0, next_amount);
             ds_grid_set(grid, i, 1, next_total);
             ds_grid_set(grid, i, 2, next_reward);
             ds_grid_set(grid, i, 3, next_took);
             
        }
    }
}

// Pick up 100, Get more trophies, complete more objectives and levels.
